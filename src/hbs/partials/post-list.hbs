<section class="post-list">
    {{#each posts as |post|}}
        {{#link href=post.links.self className="post-list__teaser" target="internal"}}
            <div class="post-list__meta">
                <h2 class="post-list__title">{{post.attributes.title}}</h2>
                <date class="post-list__date">{{date post.attributes.dateCreated}}</date>
            </div>
            <small class="post-list__content">{{post.attributes.content}}</small>
        {{/link}}
    {{/each}}
</section>
